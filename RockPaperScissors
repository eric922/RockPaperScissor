<script>
function computerPlay(){
   var computerNum = Math.floor((Math.random() *3) +1);
   var computerChoice;
    if(computerNum ===1){
        computerChoice = "Rock";}
    if(computerNum ===2){
        computerChoice= "Paper";}
    if(computerNum ===3){
        computerChoice = "Scissors";}
    return("I choose " + computerChoice)
    }
function playerChoice() {
   var choice = prompt("Please make your selection");
   return choice;
}
const var playerPick = playerChoice;
const var ComputerPick = computerPlay;

}
